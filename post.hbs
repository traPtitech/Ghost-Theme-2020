{{!< default}}
{{#post}}
<section id="eyecatch">
	<div class="wrap{{#unless feature_image}} noimg{{/unless}}">
		<picture class="background">
		{{#if feature_image}}
			<source srcset="{{feature_image}}.webp?webp=1&width=640" media="(max-width: 640px)" type="image/webp">
			<source srcset="{{feature_image}}?width=640" media="(max-width: 640px)">
			<source srcset="{{feature_image}}.webp?webp=1" type="image/webp">
			<img src="{{feature_image}}">
		{{else}}
			<img src="{{asset "logo/icon.svg"}}" style="color:white">
		{{/if}}
		</picture>
		{{#is "page"}}
		<div class="post-head page-head">
			<h1>{{title}}</h1>
		</div>
		{{else}}
		<div class="post-head">
			<p class="meta">
				{{date published_at format="YYYY年M月D日"}}
				|
				{{#has tag="お知らせ"}}
					<a href="/tag/news">お知らせ</a>
				{{/has}}
				{{#has tag="作品紹介"}}
					<a href="/tag/works">作品紹介</a>
				{{/has}}
				{{^has tag="お知らせ,作品紹介"}}
					<a href="/page/1/">ブログ記事</a>
				{{/has}}
			</p>
			<h1>{{title}}</h1>
			<div class="tags">
				{{tags separator=" "}}
			</div>
		</div>
		<div class="main-authors">
		{{#foreach authors limit="3"}}
			<div class="author">
				<a href="{{url}}">
					{{#if profile_image}}
						<img src="{{profile_image}}" decoding="async">
					{{else}}
						<img src="https://q.trap.jp/api/1.0/public/icon/traP" decoding="async">
					{{/if}}
					<span>{{name}}</span>
				</a>
			</div>
		{{/foreach}}
		</div>
		{{/is}}
	</div>
	<div class="sub-authors">
		{{#foreach authors from="4"}}
			<div class="author">
				<a href="{{url}}">
					{{#if profile_image}}
						<img src="{{profile_image}}" decoding="async">
					{{else}}
						<img src="https://q.trap.jp/api/1.0/public/icon/traP" decoding="async">
					{{/if}}
				</a>
			</div>
		{{/foreach}}
	</div>
</section>
<article>
	{{content}}
</article>
{{^is "page"}}
	<section id="authors-detail">
		{{#foreach authors}}
			<div class="author-detail">
				<a href="{{url}}">
					{{#if profile_image}}
						<img class="lozad" data-src="{{profile_image}}">
					{{else}}
						<img class="lozad" data-src="https://q.trap.jp/api/1.0/public/icon/traP">
					{{/if}}
				</a>
				<div>
					<small>この記事を書いた人</small>
					<br>
					<a class="name" href="{{url}}">{{name}}</a>
					{{> author-link}}
					<p>{{bio}}</p>
				</div>
			</div>
		{{/foreach}}
	</section>
{{/is}}
<section id="share">
	<h1>この記事をシェア</h1>
	<div>
		{{!-- Twitter --}}
		<a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-show-count="false" data-size="large">ツイート</a>
		<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
		{{!-- Hatena bookmark --}}
		<a href="https://b.hatena.ne.jp/entry/" class="hatena-bookmark-button" data-hatena-bookmark-layout="basic-label-counter" data-hatena-bookmark-lang="ja" data-hatena-bookmark-height="28" title="このエントリーをはてなブックマークに追加">
			<img src="https://b.st-hatena.com/images/v4/public/entry-button/button-only@2x.png" alt="このエントリーをはてなブックマークに追加" width="20" height="20" style="border: none;" />
		</a>
		<script src="https://b.st-hatena.com/js/bookmark_button.js" charset="utf-8" async="async"></script>
		{{!-- Facebook --}}
		<div class="fb-like" data-layout="button_count" data-action="like" data-size="large" data-share="false"></div>
		<div class="fb-share-button" data-href="https://trap.jp/post/{{post.slug}}/" data-layout="button_count" data-size="large"></div>
		{{!-- WebShareAPI --}}
		<div id="web-share" class="disabled"><i class="fas fa-share-alt"></i><span>共有</span></div>
		{{!-- Facebook (API) --}}
		<div id="fb-root"></div>
		<script async defer crossorigin="anonymous" src="https://connect.facebook.net/ja_JP/sdk.js#xfbml=1&version=v5.0"></script>
	</div>
</section>
{{/post}}
{{^is "page"}}
	<iframe id="hyakkiyagyo" src="https://sysad.trap.show/hyakkiyagyo/page/{{post.slug}}/" scrolling="no" loading="lazy"></iframe>
	{{#if post.tags}}
		{{#get "posts" filter="tags:[{{post.tags}}]+id:-{{post.id}}" include="tags,authors" limit="6"}}
			{{#if posts.length}}
				<section id="postlist">
					<h1>関連する記事</h1>
					<div class="articles">
						{{#foreach posts}}
							{{> post-link}}
						{{/foreach}}
					</div>
				</section>
			{{/if}}
		{{/get}}
	{{else}}
		{{#get "posts" filter="authors:{{post.primary_author.slug}}+id:-{{post.id}}" include="authors" limit="6"}}
			{{#if posts.length}}
				<section id="postlist">
					<h1>関連する記事</h1>
					<div class="articles">
						{{#foreach posts}}
							{{> post-link}}
						{{/foreach}}
					</div>
				</section>
			{{/if}}
		{{/get}}
	{{/if}}

{{/is}}
