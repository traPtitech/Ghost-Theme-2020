{{#if feature_image}}
	<a href="{{url}}" class="article lozad" data-background-image="{{feature_image}}">
{{else}}
	<a href="{{url}}" class="article noimg">
{{/if}}
	<div class="meta">
		<small>{{date published_at format="YYYY年M月D日"}}</small>
		<br>
		<strong>{{title}}</strong>
		<div class="author">
			{{#foreach author limit="2"}}
				{{#if @first}}
					{{#if profile_image}}
						<img class="lozad" data-src="{{profile_image}}">
					{{else}}
						<img class="lozad" data-src="https://q.trap.jp/api/1.0/public/icon/traP">
					{{/if}}
					<span>{{name}}</span>
				{{else}}
					<span> + 他</span>
				{{/if}}
			{{/foreach}}
		</div>
	</div>
</a>
